<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Create A New Order</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="orders" class="btn btn-info form-control text-white">
            Add Item
        </a>
    </div>
    <div id="orderSuccess" class="alert-box success col-12"></div>
    <div class="alert-box failure col-12">Failure Alert !!!</div>
    <div class="alert-box warning col-12">Warning Alert !!!</div>
    <div class="alert-box primary col-12">Congratulation!!! You are qualified for free shopping.</div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity (#)</th>
                    <th>Price ($)</th>
                    <th>Total ($)</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot align="right">
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                <tr>
                    <th colspan="3">Tax(15%)</th>
                    <th id="TaxValue"></th>
                    <th></th>
                </tr>
                <tr>
                    <th colspan="3">Total($)</th>
                    <th id="TotalValue"></th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="col5 offset-11">
        <input type="button" onclick="SubmitOrder()" value="Submit" class="btn btn-success form-control text-white" id="SubmitOrder">
    </div>
</div>

@section Scripts{
    <script src="~/js/orderList.js"></script>
}